<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/p1black"
    android:backgroundTint="@color/p1black">

    <TextView
        android:id="@+id/izvininaslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ko daje?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/izvinitekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:text="Igrac: 1\nIgrac: 2\nIgrac: 3\nIgrac: 4"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/izvininaslov" />

    <EditText
        android:id="@+id/izviniUNOS"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@color/p1svetla"
        android:ems="10"
        android:hint="Unesi broj:"
        android:inputType="number"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        app:layout_constraintRight_toLeftOf="@+id/izviniOK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/izvinitekst" />

    <Button
        android:id="@+id/izviniOK"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/p1svetla"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/izvinitekst"
        app:strokeColor="@color/p1orange"
        app:strokeWidth="3dp" />


</androidx.constraintlayout.widget.ConstraintLayout>